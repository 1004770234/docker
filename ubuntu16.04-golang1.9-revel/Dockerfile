FROM idoall/ubuntu16.04-golang:1.9
MAINTAINER lion <lion.net@163.com>


COPY files/ /

# -----------------------------------------------------------------------------
# Quick Start revel
# -----------------------------------------------------------------------------
RUN cd $GOPATH \
    && go get -u github.com/revel/cmd/revel \
    && revel new github.com/idoall.org/my-app


# -----------------------------------------------------------------------------
# 映射端口
# -----------------------------------------------------------------------------
EXPOSE 80 9000
